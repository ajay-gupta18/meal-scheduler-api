generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int            @id @default(autoincrement())
  name      String
  email     String         @unique
  password  String
  createdAt DateTime       @default(now())
  role      Role           @default(USER)
  refreshToken String?
  plans     DietPlan[]
  schedules MailSchedule[]
  profile   UserProfile?
}

model UserProfile {
  id       Int    @id @default(autoincrement())
  userId   Int    @unique
  height   Float
  weight   Float
  gender   String
  age      Int
  foodType String
  goal     String
  user     User   @relation(fields: [userId], references: [id])
}

model DietPlan {
  id        Int      @id @default(autoincrement())
  userId    Int
  title     String
  source    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  meals     Meal[]
}

model Meal {
  id          Int            @id @default(autoincrement())
  dietPlanId  Int
  mealType    String
  mealName    String
  calories    Int
  protein     Float
  carbs       Float
  fat         Float
  scheduledAt DateTime
  schedules   MailSchedule[]
  plan        DietPlan       @relation(fields: [dietPlanId], references: [id])
}

model MailSchedule {
  id       Int      @id @default(autoincrement())
  userId   Int
  mealId   Int
  sendTime DateTime
  status   String
  meal     Meal     @relation(fields: [mealId], references: [id])
  user     User     @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
}
